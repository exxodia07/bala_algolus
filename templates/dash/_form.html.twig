<form action="{{path('mise_a_jour_contacts')}}" method="post">
    <div class="card-block col-6">

        <h4 class="sub-title">Modifier les information de la page Contact</h4>
        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    Email
                </label>
            </div>
            <div class="col-sm-10">
                <input type="text" name="email" class="form-control form-control-success" id="email"
                    value="{{ contact.email }}" required>
            </div>
        </div>

        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    Address
                </label>
            </div>
            <div class="col-sm-10">
                <textarea name="address" class="form-control form-control-success" id="address" rows="4" required>
                    {{ contact.address }}
                </textarea>
            </div>
        </div>
        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    phone
                </label>
            </div>
            <div class="col-sm-10">
                <input type="text" name="phone" class="form-control form-control-success" id="phone"   value="{{ contact.phone }}"  required>
            </div>
        </div>

        <button type="submit" class="btn btn-success alert-success-msg m-b-10">
            Update
        </button>

    </div>

</form>