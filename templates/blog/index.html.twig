{% block body %}
	<div class="page-body">
		<form action="{{path('mise_a_jour_blogs')}}" method="post">
    <div class="card-block col-6">

        <h4 class="sub-title">Modifier les information de la page blog</h4>
        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    titre 
                </label>
            </div>
            <div class="col-sm-10">
                <input type="text" name="titre_blog" class="form-control form-control-success" id="titre_blog"
                        value="{{ section.titre }}" required>
            </div>
        </div>

        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    description
                </label>
            </div>
            <div class="col-sm-10">
                <textarea name="description_blog" class="form-control form-control-success" id="description_blog" rows="4" required>
                   {{ section.description}}
                </textarea>
            </div>
        </div>
        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
                    contenu
                </label>
            </div>
            <div class="col-sm-10">
                <input type="text" name="contenu_blog" class="form-control form-control-success" id="contenu_blog"     value="{{ section.Contenu }}" required >
            </div>
        </div>

        <button type="submit" class="btn btn-success alert-success-msg m-b-10">
            Update
        </button>

    </div>
</form>

	</div>
{% endblock %}
