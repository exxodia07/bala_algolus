		<form action="{{path('mise_a_jour_about')}}" method="post">
    <div class="card-block col-6">

        <h4 class="sub-title">Modifier les information de la page about</h4>
        <div class="form-group has-success row">
            <div class="col-sm-2">
                <label class="col-form-label" for="inputSuccess1">
