{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
    <h1>Section index</h1>
    <a href="{{ path('add_section') }}" class="btn btn-success float-right">Add new section</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Bouton</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.titre }}</td>
                <td>{{ section.description }}</td>
                <td>{{ section.contenu }}</td>
                <td>{{ section.image }}</td>
                <td>{{ section.bouton }}</td>
                <td>{{ section.type }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('show_section', {'id': section.id}) }}">show</a>
                    <a class="btn btn-danger"  href="{{ path('update_section', {'id': section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
